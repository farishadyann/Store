<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/plugins/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Content/plugins/bootstrap/carousel.css" rel="stylesheet" />
    @RenderSection("Style", false);
</head>
<body>
    <nav class="navbar navbar-light fixed-top bg-info" aria-label="First navbar example">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">StoreOn</a>
            <div class="btn-group">
                <button class="navbar-toggler" onclick="location.href='@Url.Action("Cart", "Cart")'" type="button" data-bs-toggle="collapse" data-bs-target="#Cart" aria-controls="navbarsExample01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="bi-cart">&nbsp;<span id="lblCartCount" class="badge bg-warning text-dark"></span></span>
                </button>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample01" aria-controls="navbarsExample01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="navbarsExample01">
                <div class="force-center">
                    <a href="#" class="ratio img-responsive img-circle" style="background-image: url(../../Content/images/UserNoImage.png); width:200px; height:200px; margin:2rem;"></a>

                    <h4>Hello User1!!</h4>
                    <hr class="dropdown-divider">
                    <div class="mt-3 mb-2">

                        <button class="btn btn-lg btn-danger pull-right" onclick="location.href='@Url.Action("Logout", "Login")'">Sign Out</button>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    @RenderBody()



    <footer class="footer mt-auto py-1 bg-light">
        <div class="container">
            <p class="text-muted text-center">StoreOn &copy; 2021.</p>
        </div>
    </footer>

    <script src="~/Scripts/plugins/jquery/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/plugins/bootstrap/bootstrap.bundle.min.js"></script>

    <script src="~/Scripts/Pages/Cart/Cart.js"></script>
    @RenderSection("Script", false)
    <script>
        var URLUserCart = '@Url.Action("SearchCart","Cart")';
    </script>
</body>
</html>
