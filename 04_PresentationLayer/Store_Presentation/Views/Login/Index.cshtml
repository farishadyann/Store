@using Store.ViewModel;
@model MS_UserAccount_Request
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script src="~/Scripts/Pages/Login/kit.fontawesome.js"></script>
    <link href="~/Content/Pages/Login/Login.css" rel="stylesheet" />
    <title>Sign in & Sign up Form</title>
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                @{
                    Html.RenderPartial("Login");
                }
                @{
                    Html.RenderPartial("Register");
                }
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>New here ?</h3>
                    <p>
                        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Debitis,
                        ex ratione. Aliquid!
                    </p>
                    <button class="btn transparent" id="sign-up-btn">
                        Sign up
                    </button>
                </div>
                <img src="~/Content/images/register.svg" class="image" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>One of us ?</h3>
                    <p>
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum
                        laboriosam ad deleniti.
                    </p>
                    <button class="btn transparent" id="sign-in-btn">
                        Sign in
                    </button>
                </div>
                <img src="~/Content/images/log.svg" class="image" />
            </div>
        </div>
    </div>
    @if (ViewBag.Err == "Y")
    {
    <script>
        const sign_in_btn = document.querySelector("#sign-in-btn");
        const sign_up_btn = document.querySelector("#sign-up-btn");
        const container = document.querySelector(".container");
        container.classList.add("sign-up-mode");
    </script>
    }

    <script src="~/Scripts/Pages/Login/Login.js"></script>
</body>
</html>
